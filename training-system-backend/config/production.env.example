# 培训系统生产环境配置示例
NODE_ENV=production
PORT=3000

# 数据库配置 - 生产环境必须修改
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USERNAME=training_user
DB_PASSWORD=your_very_secure_production_password
DB_DATABASE=training_system_prod
DATABASE_URL="mysql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}"

# JWT认证配置 - 必须使用强密钥
JWT_SECRET=your_production_jwt_secret_key_minimum_32_characters_extremely_secure
JWT_EXPIRES_IN=24h

# CORS配置 - 生产域名
CORS_ORIGIN=https://your-production-domain.com

# 安全配置
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=50

# 日志配置
LOG_LEVEL=warn
LOG_FILE_MAX_SIZE=52428800
LOG_MAX_FILES=20
